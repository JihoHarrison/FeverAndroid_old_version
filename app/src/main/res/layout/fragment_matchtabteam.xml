<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="10"
            android:fontFamily="@font/spoqahansansneo_bold"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="내 소속팀" />
        <!--알림 종 모양 버튼? 으로 넣을 예정.-->
        <ImageButton
            android:id="@+id/btnMoreMyTeams"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_gravity="right"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_more_arrow" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/myTeamsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--내 소속팀 리사이클러뷰-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/myTeamsRc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="16sp"
            android:fontFamily="@font/spoqahansansneo_bold"
            android:layout_weight="10"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="우리 팀과 경기할 팀을 찾아보세요!"/>
        <ImageButton
            android:id="@+id/btnMoreCompeteTeams"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_gravity="right"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_more_arrow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--우리팀과 경기 할 팀 리사이클러뷰-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/teamsCompeteRc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="10"
            android:fontFamily="@font/spoqahansansneo_bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="정식으로 가입할 팀을 찾아보세요!"/>
        <ImageButton
            android:id="@+id/btnMoreRegisterTeams"
            android:paddingRight="20dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_more_arrow" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!--정식으로 가입 할 팀 리사이클러뷰-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/teamsToRegistRc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:fontFamily="@font/spoqahansansneo_bold"
            android:layout_weight="10"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="용병으로 뛸 팀을 찾아보세요!"/>
        <ImageButton
            android:id="@+id/btnMoreToMercenary"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_gravity="right"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_more_arrow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--용병으로 뛸 팀 리사이클러뷰-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/teamsAsSoloRc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>
</ScrollView>