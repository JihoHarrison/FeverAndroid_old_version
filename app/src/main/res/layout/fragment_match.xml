<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/FeverTitleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FEVER!"
                android:layout_gravity="center"
                android:textSize="30dp">

            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/matchLocateSpinner"
                    android:textAlignment="center"
                    android:layout_width="100dp"
                    android:layout_height="match_parent">
                </androidx.appcompat.widget.AppCompatSpinner>
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/matchGunguSpinner"
                    android:textAlignment="center"
                    android:layout_width="100dp"
                    android:layout_height="match_parent">
                </androidx.appcompat.widget.AppCompatSpinner>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/categoryTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="축구"
                android:layout_gravity="center">

            </TextView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/match_fragment_category_img"
                android:layout_gravity="right"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/sony_sample"
            ></de.hdodenhof.circleimageview.CircleImageView>

        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#BDBDBD"/>

    <LinearLayout
        android:id="@+id/matchTabLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/matchTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            android:layout_gravity="center"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/design_default_color_primary"
            app:tabIndicatorColor="@color/black"
            android:background="@drawable/tablayout_round">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/matchTeamTab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="팀">
            </com.google.android.material.tabs.TabItem>
            <com.google.android.material.tabs.TabItem
                android:id="@+id/matchPlayerTab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="선수">
            </com.google.android.material.tabs.TabItem>
        </com.google.android.material.tabs.TabLayout>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/matchViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.viewpager.widget.ViewPager>
    </LinearLayout>
</LinearLayout>