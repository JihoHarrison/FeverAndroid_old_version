<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/match_fragment_prof_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@drawable/sony_sample"
            ></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="축구"
            android:layout_gravity="center"
            ></TextView>

    <androidx.appcompat.widget.SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:iconifiedByDefault="false"
        app:queryHint="지역을 검색하세요"
        >


    </androidx.appcompat.widget.SearchView>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/matchtab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >

            <com.google.android.material.tabs.TabItem
                android:id="@+id/matchtab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="matchtab1">

            </com.google.android.material.tabs.TabItem>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/matchtab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="matchteb2">

            </com.google.android.material.tabs.TabItem>


        </com.google.android.material.tabs.TabLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#BDBDBD"/>

    <!--FrameLayout으로 바꿀 예정-->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/matchTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       />
</LinearLayout>