<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:padding="30dp"
    tools:context=".activities.login.RegisterActivity">


    <TextView
    android:id="@+id/txtEditNickname"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="닉네임" />

    <EditText
        android:padding="10dp"
        android:id="@+id/editNickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="닉네임"
        />

    <TextView
        android:id="@+id/txtEditName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이름" />

    <EditText
        android:padding="10dp"
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="실명"
        />

    <TextView
        android:id="@+id/txtEditPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="연락처" />

    <EditText
        android:padding="10dp"
        android:id="@+id/editPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="휴대폰 번호"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
        <TextView
            android:id="@+id/txtEditBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="생일" />
        <EditText
            android:padding="10dp"
            android:id="@+id/editBirth"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="생년월일 8자리"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/txtEditSex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="성별" />

        <RadioGroup
            android:id="@+id/radioGroupGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/radioMale"
                android:text="남자"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></androidx.appcompat.widget.AppCompatRadioButton>
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/radioFemale"
                android:text="여자"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></androidx.appcompat.widget.AppCompatRadioButton>
        </RadioGroup>
        </LinearLayout>



    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:text="로그아웃"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/secession"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="탈퇴하기"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="변경"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>