<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/editRegistId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="아이디"></EditText>

        <EditText
            android:id="@+id/editRegistPw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호"></EditText>

        <EditText
            android:id="@+id/editRegistPwCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호"></EditText>

        <EditText
            android:id="@+id/editRegistEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이메일"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        >
        <Button
            android:id="@+id/btnRegisterComp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원가입 완료"></Button>

    </LinearLayout>
</LinearLayout>